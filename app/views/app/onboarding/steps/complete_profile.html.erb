<%# app/views/app/onboarding/steps/complete_profile.html.erb %>
<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Your Profile</h3>
    
    <%= form_with model: current_user, url: app_onboarding_steps_path(current_step: 'complete_profile'), class: "mt-5 space-y-5" do |f| %>
      <div>
        <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#631919] focus:ring-[#631919] sm:text-sm" %>
      </div>

      <div>
        <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#631919] focus:ring-[#631919] sm:text-sm" %>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Continue", class: "ml-3 inline-flex justify-center rounded-md border border-transparent bg-[#631919] py-2 px-4 text-sm font-medium text-white shadow-sm hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-[#631919] focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>
