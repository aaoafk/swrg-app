<%# app/views/app/onboarding/steps/group_selection.html.erb %>
<%= content_for :onboarding_cta do %>
		If you know your group select it below!
<% end %>

<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Select a Reading Group</h3>
    
    <%= form_with url: app_onboarding_steps_path(current_step: 'select_group'), class: "mt-5 space-y-5" do |f| %>
      <div class="space-y-4">
        <% Group.all.each do |group| %>
          <div class="flex items-center">
            <%= radio_button_tag 'user[group_ids][]', group.id, false, class: "h-4 w-4 border-gray-300 text-[#631919] focus:ring-[#631919]" %>
            <%= label_tag "user_group_ids_#{group.id}", group.name, class: "ml-3 block text-sm font-medium text-gray-700" %>
          </div>
        <% end %>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Complete Setup", class: "ml-3 inline-flex justify-center rounded-md border border-transparent bg-[#631919] py-2 px-4 text-sm font-medium text-white shadow-sm hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-[#631919] focus:ring-offset-2" %>
      </div>
    <% end %>
		<%= button_to "I'll decide later", 
		skip_app_onboarding_steps_path,
			 method: :patch,
			 class: "text-sm text-[#631919] hover:text-[#631919]/80 font-medium underline underline-offset-2" %>
  </div>
</div>
