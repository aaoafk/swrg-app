<%# app/views/sessions/new.html.erb %>
<div class="max-w-md mx-auto mt-12 p-6">
  <h2 class="font-serif text-3xl mb-6 text-center">Sign in</h2>

  <%= form_with url: session_path, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :email, "Email address", 
          class: "block font-sans text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-[#631919] focus:border-[#631919]",
          placeholder: "Enter your email" %>
    </div>

    <%= f.submit "Sign in", 
        class: "w-full bg-[#631919] text-white px-6 py-3 rounded hover:opacity-90 transition-opacity font-sans" %>
  <% end %>
</div>
