<%# app/views/sessions/validate.html.erb %>
<div class="max-w-md mx-auto mt-12 p-6">
  <h2 class="font-serif text-3xl mb-2 text-center">Enter Code</h2>
  <p class="font-sans text-center text-gray-600 mb-8">We sent a code to your email.</p>

  <%= form_with url: verify_session_path, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :code, "Code:", 
          class: "block font-sans text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :code, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-[#631919] focus:border-[#631919] text-center tracking-[0.5em] text-lg",
          maxlength: 6, 
          pattern: "[0-9]{6}",
          inputmode: "numeric",
          autocomplete: "one-time-code" %>
    </div>

    <%= f.submit "Verify", 
        class: "w-full bg-[#631919] text-white px-6 py-3 rounded hover:opacity-90 transition-opacity font-sans" %>
    
    <div class="text-center mt-4">
				<%= button_to "Resend code", 
				session_path,
				method: :post,
				class: "text-[#631919] hover:underline font-sans inline-block bg-transparent border-0 p-0 cursor-pointer" %>
    </div>
  <% end %>
</div>
